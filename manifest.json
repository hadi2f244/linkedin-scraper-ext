{
  "manifest_version": 3,
  "name": "LinkedIn Job Details Summary",
  "version": "1.0.0",
  "description": "Automatically scrape and summarize LinkedIn job details in a side panel",
  "action": {
    "default_title": "LinkedIn Job Details Summary"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["sidePanel", "scripting", "activeTab", "storage", "tabs"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.openai.com/*",
    "https://chats.qgpt.ir/*",
    "https://github.com/*",
    "https://api.github.com/*",
    "https://api.githubcopilot.com/*"
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["pdf.min.js", "pdf.worker.min.js", "copilot-auth.js"],
      "matches": ["<all_urls>"]
    }
  ]
}